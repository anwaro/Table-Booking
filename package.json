{
    "name": "table",
    "version": "0.1.0",
    "private": true,
    "homepage": "https://anwaro.github.io/table-booking",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
        "lint": "eslint . --ext ts,tsx --fix --report-unused-disable-directives",
        "preview": "vite preview",
        "postinstall": "husky install",
        "format": "prettier --write \"./src/**/*.+(js|jsx|ts|tsx|json|yml|yaml|css|md|vue)\""
    },
    "dependencies": {
        "classnames": "2.5.1",
        "react": "18.3.1",
        "react-dom": "18.3.1"
    },
    "devDependencies": {
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@typescript-eslint/eslint-plugin": "^7.15.0",
        "@typescript-eslint/parser": "^7.15.0",
        "@vitejs/plugin-react": "^4.3.1",
        "@vitest/coverage-v8": "^2.0.4",
        "@vitest/ui": "^2.0.4",
        "eslint": "^8.57.0",
        "eslint-plugin-react-hooks": "4.6.2",
        "eslint-plugin-react-refresh": "0.4.9",
        "husky": "^9.1.1",
        "prettier": "^3.3.3",
        "sass": "^1.77.8",
        "typescript": "5.5.4",
        "vite": "^5.3.4",
        "vitest": "^2.0.4"
    },
    "lint-staged": {
        "./src/**/*.{js,jsx,ts,tsx}": [
            "prettier --write",
            "eslint --fix-dry-run"
        ]
    }
}
